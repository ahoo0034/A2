{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A population pyramid for the US in 2000.",
  "data": { "url": "https://raw.githubusercontent.com/ahoo0034/A2/refs/heads/main/Data/Australia's_population_born_Australia_overseas.csv"},
 
  "spacing": 0,
  "hconcat": [{
    
    "title": "Aust-born males(%)",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age group(years)", "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "Aust-born males(%)",
        "title": "Aust-born males(%)",
        "axis": {"format": "s"},
        "sort": "descending"
      },
      "color": {
        "field": "gender",
        "scale": {"range": ["#675193", "#ca8861"]},
        "legend": null
      },
      "tooltip": [
        { "field": "Age group(years)", "type": "nominal", "title": "Age group(years)" },
        { "field": "Aust-born males(%)", "type": "quantitative", "title": "Aust-born males(%)" }
      ]
    }
  }, {
    "width": 20,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {"field": "Age group(years)", "type": "ordinal", "axis": null, "sort": "descending"},
      "text": {"field": "Age group(years)", "type": "quantitative"}
      
    }
  }, {
    
    "title": "OS-born males(%)",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age group(years)", "title": null,
        "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "OS-born males(%)",
        "title": "OS-born males(%)",
        "axis": {"format": "s"}
      },
      "color": {
        "field": "gender",
        "legend": null
      },
      "tooltip": [
        { "field": "Age group(years)", "type": "nominal", "title": "Age group(years)" },
        { "field": "OS-born males(%)", "type": "quantitative", "title": "OS-born males(%)" }
        ]
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
