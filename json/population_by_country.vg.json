{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Stacked Line Graph: Australian-born vs Overseas-born Populations (in Millions)" },
  "data": {
    "url": "https://raw.githubusercontent.com/ahoo0034/A2/refs/heads/main/data/proportion_born_overseas.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "MinYear",
      "value": 1891,
      "bind": {
        "input": "range",
        "min": 1891,
        "max": 2023,
        "step": 1,
        "name": "Select Min Year: "
      }
    },
    {
      "name": "MaxYear",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1891,
        "max": 2023,
        "step": 1,
        "name": "Select Max Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year >= MinYear && datum.Year <= MaxYear"
    },
    {
      "fold": ["Number_of_Australian-born_(M)", "Number_of_overseas-born_(M)"],
      "as": ["Origin", "Population"]
    },
    {
      "calculate": "datum.Origin === 'Number_of_Australian-born_(M)' ? 'Number of Aus-born' : 'Number of overseas-born'",
      "as": "Origin"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "area",
        "line": true,
        "point": true
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year",
          "axis": {
            "format": "d"
          }
        },
        "y": {
          "field": "Population",
          "type": "quantitative",
          "title": "Population (Millions)"
        },
        "color": {
          "field": "Origin",
          "type": "nominal",
          "title": "Origin",
          "scale": {
            "domain": ["Number of Aus-born", "Number of overseas-born"],
            "range": ["#1f77b4", "#ff7f0e"]
          },
          "legend": {
            "title": "Origin",
            "labelFontSize": 14,
            "titleFontSize": 16
          }
        },
        "tooltip": [
          { "field": "Year", "type": "quantitative", "title": "Year" },
          { "field": "Origin", "type": "nominal", "title": "Origin" },
          { "field": "Population", "type": "quantitative", "title": "Population (Millions)" }
        ]
      }
    }
  ],
  "width": 300,
  "height": 250
}
